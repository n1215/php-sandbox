{
    "name": "n1215/phlower",
    "description": "php flow library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "n1215",
            "email": "knakae1215@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "N1215\\Phlower\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "N1215\\Phlower\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ],
        "coverage": [
            "rm -rf ./build",
            "mkdir ./build",
            "phpdbg -qrr vendor/bin/phpunit --coverage-html ./build"
        ]
    }
}
